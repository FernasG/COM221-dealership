<style>
    div#content {
        gap: 20px;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
    }

    div#content>div.card {
        padding: 10px;
        background: var(--rich-black-flogra);
        border-radius: 10px;
    }
</style>

<div class="model hide">
    <div class="model-header">
        <div class="model-title">
            <h3>Add Vehicle</h3>
        </div>
        <div class="model-controls">
            <button class="center" onclick="closeModal()">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
    </div>
    <div class="model-body">
        <div class="model-form">
            <div class="form-line">
                <div class="input-box">
                    <label for="vehicle_model">Model: </label>
                    <input type="text" name="model" id="vehicle_model" required>
                </div>

                <div class="input-box">
                    <label for="manufacturer">Manufacturer: </label>
                    <input type="text" name="manufacturer" id="manufacturer" required>
                </div>
            </div>

            <div class="form-line">
                <div class="input-box">
                    <label for="price">Price: </label>
                    <input type="number" name="price" id="price" required>
                </div>

                <div class="input-box">
                    <label for="manufacturing_date">Date: </label>
                    <input type="date" name="manufacturing_date" id="manufacturing_date" required>
                </div>

                <div class="input-box">
                    <label for="type">Type: </label>
                    <select name="type" id="type" required>
                        <option value="car">Car</option>
                        <option value="motorcycle">Motorcycle</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="model-footer">
        <div class="model-buttons">
            <button class="save" onclick="createVehicle()">Save</button>
            <button class="cancel" onclick="closeModal()">Cancel</button>
        </div>
    </div>
</div>

<div id="content">
    {{#each vehicles }}
    <div id="vehicleId{{this.id}}" class="card">
        <p>{{this.manufacturer}} {{this.model}}</p>
        <p><span>Year:</span> {{this.manufacturing_date}}</p>
        <p><span>Price:</span> {{currency this.price}}</p>
        <button onclick="deleteVehicle('{{this.id}}')"><i class="fa-solid fa-trash"></i></button>
    </div>
    {{else}}
    <p class="no-contenr">No vehicles</p>
    {{/each}}
</div>